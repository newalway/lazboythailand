{% extends "FOSUserBundle::bundle-layout.html.twig" %}

{% block title %}{{ 'menu.reset_password'|trans }} | {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }} fos-reset-check-email{% endblock %}

{% block breadcrumbs_title %}{{ 'menu.reset_password'|trans }}{% endblock %}
{% block breadcrumbs_custom %}
	<li class="active">{{ 'menu.reset_password'|trans }}</li>
{% endblock %}

{% block content %}
<section class="bg-default section-md">
    <div class="container">
        <h4 class="text-center">{{ 'reset_password.title'|trans }}</h4>

        <div class="row">
            <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3 text-center">
                {% set email = app.request.get('username') %}
                {{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime, '%email%':email}, 'FOSUserBundle')|nl2br }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
