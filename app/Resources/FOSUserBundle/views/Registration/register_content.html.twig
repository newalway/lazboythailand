{#{% trans_default_domain 'FOSUserBundle' %}#}

<section class="bg-default section-md">
    <div class="container">
        <div class="row row-70">

            <div class="col-lg-6 col-xl-6 section-divided__main">
                <div class="regis-box input-radio select-filter">
                    <h4 class="text-center">{% trans %}member.personal.register{% endtrans %}</h4>

                    <form action="{{path('fos_user_registration_register')}}" method="post" id="customer_register_form" name="customer_register_form" enctype="multipart/form-data" class="rd-mailform rd-mailform_style-1" novalidate>
                        {{form_widget(form._token)}}

                        <div class="form-wrap">
                        <label for="first_name">{% trans %}member.personal.fname{% endtrans %} *</label>
                            {{form_widget(form.first_name, {'id' : 'first_name', 'attr': {'class': 'form-input'} })}}
                        </div>
                        <div class="text-danger">{{form_errors(form.first_name)}}</div>


                        <div class="form-wrap">
                            <label for="last_name">{% trans %}member.personal.lname{% endtrans %} *</label>
                            {{form_widget(form.last_name, {'id' : 'last_name', 'attr': {'class': 'form-input'} })}}
                        </div>
                        <div class="text-danger">{{form_errors(form.last_name)}}</div>

                        <div class="form-wrap">
                            <label for="email">{% trans %}member.personal.email{% endtrans %} *</label>
                            {{form_widget(form.email, {'id' : 'email', 'attr': {'class': 'form-input'}  })}}
                        </div>
                        <div class="text-danger">{{form_errors(form.email)}}</div>

                        <div class="form-wrap">
                            <label for="password">{% trans %}member.password{% endtrans %} *</label>
                            {{form_widget(form.plainPassword,{'id' : 'password', 'attr': {'class': 'form-input'} })}}
                        </div>
                        <div class="text-danger">{{form_errors(form.plainPassword)}}</div>

                        <div class="form-wrap">
                            <label for="gender">{% trans %}member.personal.gender{% endtrans %} </label>
                            {{form_widget(form.gender, {'id' : 'gender', 'attr': {'class': 'radio-inline gender-radio-inline'}})}}
                        </div>
                        <div class="text-danger clear-both">{{form_errors(form.gender)}}</div>

                        <div class="row" class="birth_date" style="margin-top: 20px;">
                            <div class="col-12"><label for="birth_date">{% trans %}member.personal.birth_date{% endtrans %}</label></div>
                            {% for birth_date in form.birth_date %}
                            <div class="col-sm-4 mb-1">
                                {{ form_errors(birth_date) }}
                                {{ form_widget(birth_date, {'attr': {'class': 'selectpicker'}}) }}
                            </div>
                            {% endfor %}
                        </div>
                        <div class="text-danger">{{form_errors(form.birth_date)}}</div>

                        <div class="form-wrap">
                            <label for="phone_number">{% trans %}member.personal.phone{% endtrans %} </label>
                            {{form_widget(form.phone_number, {'id' : 'phone_number', 'attr': {'class': 'form-input'} })}}
                        </div>
                        <div class="text-danger">{{form_errors(form.phone_number)}}</div>

                        {{form_widget(form.save,{'id':'save','label':'member.personal.register'|trans,'attr':{'class':'button button-primary'}})}}

                    </form>
                </div>
            </div>

            <div class="col-lg-6 col-xl-6 section-divided__aside section-divided__aside-left">
                <div class="fos-box-link">
                    <h4>Are you already customer?</h4>
                    <p>Start your shopping with La-Z-Boy Thailand</p>
                    <a href="{{path('fos_user_security_login')}}" class="button button-primary">{% trans %}menu.login{% endtrans %}</a>
                </div>
            </div>

        </div>
    </div>

</section>

