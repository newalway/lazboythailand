        <button type="submit" id="update" name="fos_user_profile_form[update]" class="button button-primary">{{'profile.edit.submit'|trans({}, 'FOSUserBundle')}}</button>

        <a href="{{path('fos_user_profile_show')}}" class="button button-black">{{'profile.edit.close'|trans({}, 'FOSUserBundle')}}</a>
    </div>

</form>
