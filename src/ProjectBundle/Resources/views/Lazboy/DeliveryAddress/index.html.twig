{% extends "ProjectBundle:"~ view_layout ~":layout_member.html.twig" %}

{% block title %}{% trans %}member.address.book{% endtrans %} | {{ parent() }}{% endblock %}

{% block member_address_active %}text-dark{% endblock %}

{% block breadcrumbs_custom %}
    {{ parent() }}
	<li class="active">{% trans %}member.address.book{% endtrans %}</li>
{% endblock %}

{% block member_header %}
    {% trans %}member.address.book{% endtrans %}
    <a href="{{path('address_create')}}" class="font-size-16 d-inline-block">
        <span class="badge badge-pill badge-warning">
            <span class="icon linear-icon-plus"></span>
            {% trans %}member.new.address{% endtrans %}
        </span>
    </a>
{% endblock %}

{% block content_member %}
<div class="member-addr">
    <div class="section-sm pt-0 pb-3">
        <div class="row mt-0 row-title">
            <div class="col-md-3"><b>{% trans %}member.personal.fullname{% endtrans %} #</b></div>
            <div class="col-md-4"><b>{% trans %}member.address{% endtrans %}</b></div>
            <div class="col-sm-2"><b>{% trans %}member.personal.phone{% endtrans %}</b></div>
            <div class="col-sm-3"></div>
        </div>
    </div>

    {% for user_data in delivery_address %}
    <div class="section-sm pt-3 pb-3">
        <div class="d-block d-md-none">
            {% if user_data.defaultShipping == 1 %}
                <span class="badge badge-dark">{% trans %}member.default.shipping.address{% endtrans %}</span>
            {% endif %}
            {% if user_data.defaultTax == 1 %}
                <span class="badge badge-dark">{% trans %}member.default.billing.address{% endtrans %}</span>
            {% endif %}
        </div>
        <div class="row row-list">
            <div class="col-md-3">
                <b>{% trans %}member.personal.fullname{% endtrans %}</b>
                {{user_data.firstName}}  {{user_data.lastName}}
            </div>
            <div class="col-md-4">
                <b>{% trans %}member.address{% endtrans %}</b>
                <div>
                    {{user_data.address}}, {{user_data.district}}, {{user_data.amphure}},
                    {{user_data.province}}
                    {#, {% if user_data.countryCode %}{{user_data.countryCode.country}}{% endif %}#}
                    {{user_data.postCode}}
                </div>
                <div class="d-none d-md-block">
                    {% if user_data.defaultShipping == 1 %}
                        <span class="badge badge-dark">{% trans %}member.default.shipping.address{% endtrans %}</span>
                    {% endif %}
                    {% if user_data.defaultTax == 1 %}
                        <span class="badge badge-dark">{% trans %}member.default.billing.address{% endtrans %}</span>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-2">
                <b>{% trans %}member.personal.phone{% endtrans %}</b>
                {{user_data.phone}}
            </div>
            <div class="col-md-3 link-ed">
                <a href="{{path('address_edit',{'id':user_data.id})}}" class="btn btn-secondary btn-sm">
                    <span class="icon linear-icon-pencil-line"></span>
                    {% trans %}edit{% endtrans %}
                </a>
                <a href="{{path('address_delete',{'id':user_data.id})}}" class="btn btn-danger btn-sm" onclick="return confirm('{% trans %}confirm.delete{% endtrans %}');">
                    <span class="icon linear-icon-trash2"></span>
                    {% trans %}remove{% endtrans %}
                </a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
