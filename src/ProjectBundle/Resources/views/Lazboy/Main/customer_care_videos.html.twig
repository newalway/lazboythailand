{% extends "ProjectBundle:"~ view_layout ~":layout.html.twig" %}

{% block title %}{% trans %}menu.customer.care.videos{% endtrans %} | {{ parent() }}{% endblock %}
{% block customer_care_videos_active %}active{% endblock %}

{% block breadcrumbs_title %}{% trans %}menu.customer.care.videos{% endtrans %}{% endblock %}
{% block breadcrumbs_custom %}
	<li class="active">{% trans %}menu.customer.care.videos{% endtrans %}</li>
{% endblock %}

{% block content %}
<section class="pt-4 pb-5 bg-default">
	<div class="container">
		<div class="row">
            {% for data in paginated.currentpageresults %}
            <div class="col-md-6 col-lg-4 mb-4 text-center">
                <div class="embed-responsive embed-responsive-16by9 mb-3">
                    {{data.embed|raw}}
                </div>
                <h6 class="m-0">{{data.getTitle}}</h6>
                {% if data.getShortDesc %}
                <p class="m-0 font-size-13">{{data.getShortDesc}}</p>
                {% endif %}
            </div>
            {% endfor %}
        </div>
	</div>
</section>

{% if paginated.havetopaginate %}
<!-- Divider-->
<div class="container">
	<div class="divider"></div>
</div>

<section class="section-sm text-center">
	<div class="container">
		<!-- Classic Pagination-->
		<nav>
			{{pagerfanta(paginated,'twitter_bootstrap3_translated_lazboy')}}
		</nav>
	</div>
</section>
{% endif %}

{% endblock %}
