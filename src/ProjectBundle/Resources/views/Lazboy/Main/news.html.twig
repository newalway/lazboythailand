{% extends "ProjectBundle:"~ view_layout ~":layout.html.twig" %}

{% block title %}{% trans %}menu.news{% endtrans %} | {{ parent() }}{% endblock %}
{% block news_active %}active{% endblock %}

{% block breadcrumbs_title %}{% trans %}menu.news{% endtrans %}{% endblock %}
{% block breadcrumbs_custom %}
	<li class="active">{% trans %}menu.news{% endtrans %}</li>
{% endblock %}

{% block content %}
<section class="bg-default pt-4 pb-5">
    <div class="container">
		{#<div class="owl-carousel carousel-post-gallery carousel-slider-blog-post" data-items="1" data-stage-padding="0" data-loop="true" data-margin="10px" data-mouse-drag="false" data-nav="true" data-dots="true" data-photo-swipe-gallery="gallery">
			<figure>
				<img src="https://placehold.it/1350x550" alt="" class="w-100"/>
			</figure>
		</div>#}

		<figure id="{{con_banner_news_top_ad}}">
			{% include "ProjectBundle:"~ view_main ~":_banner_ad_page.html.twig" with {'banner_ad': news_top_ad} %}
		</figure>

		<div class="row row-70 justify-content-sm-center">

			<div class="col-lg-7 col-xl-8 section-divided__main">
				<div class="row row-60">
					{% for data in paginated.currentpageresults %}
						<div class="col-md-6 col-xl-6">

							{% if data.image %}
								<article class="post-classic post-minimal">
									<a href="{{path('news_detail',{'id':data.id,'slug':data.getTitle|slug})}}">
										<img src="{{asset(data.image) | imagine_filter('img_450x279')}}" alt="{{data.getTitle}}" class="w-100"/>
									</a>
									<div class="post-classic-title">
										<h5><a href="{{path('news_detail',{'id':data.id,'slug':data.getTitle|slug})}}">{{data.getTitle}}</a></h5>
									</div>
									<div class="post-meta">
										<div class="group">
											<a href="{{path('news_detail',{'id':data.id,'slug':data.getTitle|slug})}}">
												<time datetime="{{ data.publicDate|date("Y") }}">{{ data.publicDate|date("d/m/Y") }}</time>
											</a>
											{% if data.author %}
												<a href="{{path('news_detail',{'id':data.id,'slug':data.getTitle|slug})}}" class="meta-author">by {{data.author}}</a>
											{% endif %}
										</div>
									</div>
								</article>

							{% else %}
								<article class="post-quote post-minimal">
									<!-- Quote default-->
									<a class="quote-default" href="{{path('news_detail',{'id':data.id,'slug':data.getTitle|slug})}}">
