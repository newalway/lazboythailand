                        </li>
					</ul>#}
				</section>

				{% include 'ProjectBundle:'~ view_layout ~'/Main:_social.html.twig' %}

			</div>

		</div>
    </div>
</section>
<!-- Divider-->
<div class="container">
	<div class="divider"></div>
</div>

{% if paginated.havetopaginate %}
<section class="section-sm text-center">
	<div class="container">
		<!-- Classic Pagination-->
		<nav>
			{{pagerfanta(paginated,'twitter_bootstrap3_translated_lazboy')}}
		</nav>
	</div>
</section>
{% endif %}

{% endblock %}
