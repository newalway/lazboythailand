{% extends "ProjectBundle:"~ view_layout ~":layout_member.html.twig" %}

{% block title %}{% trans %}member.generate.token{% endtrans %} | {{ parent() }}{% endblock %}

{% block member_profile_active %}text-dark{% endblock %}

{% block breadcrumbs_custom %}
    {{ parent() }}
	<li class="active">{% trans %}member.generate.token{% endtrans %}</li>
{% endblock %}

{% block member_header %}{% trans %}member.generate.token{% endtrans %}{% endblock %}

{% block content_member %}
<div class="section-sm pt-0 border-top-0">

    {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="fa fa-check-circle-o"></span> {{ flashMessage|raw }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}

    <form id="data_form" action="{{path('member_generate_token_update')}}" method="post" enctype="multipart/form-data" class="form-horizontal">
        {{form_widget(form._token)}}
        {% trans %}member.generate.token_description{% endtrans %}
        <div class="row mt-0">
            <div class="col-md-6">
                {% if app.user.email %}
                <div class="form-wrap">
                    <label>{% trans %}member.personal.email{% endtrans %} : </label>
                    <span class="text-dark">{{app.user.email}}</span>
                </div>
                {% endif %}

                <div class="form-wrap">
                    <label for="current_password">{% trans %}member.password{% endtrans %} *</label>
                    {{form_widget(form.current_password, {'id' : 'current_password','attr': {'class': 'form-input'}})}}
                    <div class="text-danger">{{form_errors(form.current_password)}}</div>
                </div>

                {{form_widget(form.save, {'id' : 'save', 'label': 'member.generate.token.button'|trans, 'attr': {'class': 'button button-primary'}})}}
            </div>
        </div>
    </form>
</div>
{% endblock %}
