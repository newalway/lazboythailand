<h4>
    {% trans %}member.address.book{% endtrans %}
    <a href="{{path('address')}}" class="font-size-16 d-inline-block">
        <span class="badge badge-pill badge-warning">
            <!-- <span class="icon linear-icon-plus"></span> -->
            {% trans %}see.more{% endtrans %}
        </span>
    </a>
</h4>

<div class="row mt-0">
    <div class="col-sm-6 mt-3">
        <h6 class="mb-3"><u>{% trans %}member.default.shipping.address{% endtrans %}</u></h6>
        {% if default_shipping_address %}
            <b>{{default_shipping_address.firstName}}  {{default_shipping_address.lastName}}</b>
            <div>
                {{default_shipping_address.address}},  {{default_shipping_address.district}}, {{default_shipping_address.amphure}},
                {{default_shipping_address.province}} {#,  {% if default_shipping_address.countryCode %}{{default_shipping_address.countryCode.country}}{% endif %}#}
                {{default_shipping_address.postCode}} <br />{{default_shipping_address.phone}}
            </div>
        {% else %}
            {% trans %}member.no.default.shipping.address{% endtrans %}
        {% endif %}
    </div>

    <div class="col-sm-6 mt-3">
        <h6 class="mb-3"><u>{% trans %}member.default.billing.address{% endtrans %}</u></h6>
        {% if default_billing_address %}
            <b>{{default_billing_address.firstName}}  {{default_billing_address.lastName}}</b>
            <div>
                {{default_billing_address.address}},  {{default_billing_address.district}}, {{default_billing_address.amphure}},
                {{default_billing_address.province}} {#,  {% if default_billing_address.countryCode %}{{default_billing_address.countryCode.country}}{% endif %}#}
                {{default_billing_address.postCode}} <br />{{default_billing_address.phone}}
            </div>
        {% else %}
            {% trans %}member.no.default.billing.address{% endtrans %}
        {% endif %}
    </div>
</div>
