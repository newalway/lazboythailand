{% extends "ProjectBundle:"~ view_layout ~":layout_member.html.twig" %}

{% block title %}{% trans %}member.wishlist{% endtrans %} | {{ parent() }}{% endblock %}

{% block member_wishlist_active %}text-dark{% endblock %}

{% block breadcrumbs_custom %}
    {{ parent() }}
	<li class="active">{% trans %}member.wishlist{% endtrans %}</li>
{% endblock %}

{% block member_header %}{% trans %}member.wishlist{% endtrans %}{% endblock %}

{% block content_member %}
<div class="row justify-content-sm-center row-70 member-wishlist">
    {% for data in paginated.currentpageresults %}
    {% set item = data[0] %}
    {% set price_data = getPriceData(data) %}
    <div class="col-sm-12">
        <div class="product product-list unit flex-column flex-md-row unit-spacing-lg">
            <div class="unit__left product-img-wrap">
                <a href="{{path('product_detail',{'id':item.id,'slug':item.slug})}}">
                    {% if item.image  %}
                        <img src="{{asset(item.image) | imagine_filter('img_300x300')}}" alt="{{item.getTitle}}" width="300"/>
                    {% else %}
                        <img src="{{asset('lazboy/images/img_1x1.png')}}" alt="{{item.getTitle}}" width="300" height="300"/>
                    {% endif %}
                </a>

                <div class="product-label-wrap">
                    {#<span class="featured">Featured</span>#}
                    {% if item.isNew %}
                        <span class="new">New</span>
                    {% endif %}

                    {% if item.isSale %}
                        <span class="sale">Sale</span>
                    {% endif %}

                    {% if item.isTopSeller %}
                        <span class="best-seller">Best Seller</span>
                    {% endif %}

                    {% if item.isImported %}
                        <span class="imported">Imported</span>
                    {% endif %}

                    {#{% if item.isOnlineShopping %}
                        <span class="buy-now">Buy Now</span>
                    {% endif %}#}
                </div>
                <div class="position-buy-now">
                  {% if item.isOnlineShopping %}
                      <div class="circle_container">
                        <div class="circle_main">
                          <div class="circle_text_container">
                            <div class = "circle_text">
                              <i class="icon icon-md linear-icon-cart link-primary top-position"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                  {% endif %}
                </div>

            </div>

            <div class="unit__body product-caption">
                {% if item.productCategories|length > 0 %}
                    <ul class="product-categories">
                        {% for cate in item.productCategories %}
                            <li>
                                <a>{{cate.getTitle}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
                {% if item.getShortDesc %}
                    <div style="font-size: 12px;">{{item.getShortDesc}}</div>
                {% endif %}
                {# {% if item.hashtags|length > 0 %}
                    <ul class="product-categories">
                        {% for hashtag in item.hashtags %}
                            <li><a href="#">{{hashtag.title}}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %} #}

                <h5 class="product-title">
                    <a href="{{path('product_detail',{'id':item.id,'slug':item.slug})}}">{{item.getTitle}}</a>
                </h5>

                {% if item.isOnlineShopping %}
                    {% if price_data.price and price_data.price > 0 %}
                        <small class="line-height-normal font-size-12 mt-1">{% trans %}product.starting_at{% endtrans %}</small>
                        {% if (price_data.compare_at_price > price_data.price) %}
                            <p class="product-price sale-price mt-0 line-height-normal">
                                <span>{{price_data.price|number_format(0,'.',',')}}</span>
                                <span>{{price_data.compare_at_price|number_format(0,'.',',')}}</span>
                            </p>
                        {% else %}
                            <p class="product-price mt-0 line-height-normal">
                                <span>{{price_data.price|number_format(0,'.',',')}}</span>
                            </p>
                        {% endif %}
                    {% endif %}
                {% endif %}


                <a class="button-black button button-icon-left button-icon" href="{{path('product_detail',{'id':item.id,'slug':item.slug})}}">
                    <span class="icon icon-md icon-gray fa fa-eye"></span>
                    <span>{% trans %}view.more{% endtrans %}</span>
                </a>
                <a href="{{path('member_wishlist_delete',{'id':item.id})}}" class="button button-icon button-remove" data-toggle="tooltip" data-original-title="Remove">
                    <span class="icon icon-md icon-gray linear-icon-trash"></span>
                </a>
                <!-- <div class="product-icon-wrap">
                    <span class="icon icon-md linear-icon-heart" data-toggle="tooltip" data-original-title="Add to Wishlist"></span>
                    <span class="icon icon-md linear-icon-balance" data-toggle="tooltip" data-original-title="Add to Compare"></span>
                </div> -->
            </div>
        </div>
    </div>
    {% else %}
        <div class="col-sm-12">{% trans %}no.datas.found{% endtrans %}</div>
    {% endfor %}
</div>
<!-- Pagination-->
{% if paginated.havetopaginate %}
<!-- Pagination-->
<section class="section-sm">
    <!-- Classic Pagination-->
    <nav>
        {{pagerfanta(paginated,'twitter_bootstrap3_translated_lazboy')}}
    </nav>
</section>
{% endif %}
{% endblock %}
