{% extends "ProjectBundle:"~ view_layout ~":layout_member.html.twig" %}

{% block title %}{% trans %}member.set_password{% endtrans %} | {{ parent() }}{% endblock %}

{% block member_change_password_active %}text-dark{% endblock %}

{% block breadcrumbs_custom %}
    {{ parent() }}
	<li class="active">{% trans %}member.set_password{% endtrans %}</li>
{% endblock %}

{% block member_header %}{% trans %}member.set_password{% endtrans %}{% endblock %}

{% block content_member %}
<p>
    {% trans %}member.password.setpassword.description{% endtrans %}
</p>

<p>
    {% trans %}member.password.setpassword.username{% endtrans %}
    <b>{{app.user.email}}</b>
</p>

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="mt-0">
    <div class="form-wrap">
        <input type="hidden" id="username" name="username" value="{{app.user.email}}"/>
        <button type="submit" id="_submit" name="_submit" class="button button-primary">{{ 'member.password.setpassword.submit'|trans() }} <span class="fa fa-caret-right"></span></button>
    </div>
</form>

{% endblock %}
