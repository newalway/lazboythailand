{% extends "ProjectBundle:Lazboy:layout_email.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block subject %}
    {% autoescape false %}
    {{ 'resetting.email.subject'|trans({'%username%': user.username}) }}
    {% endautoescape %}
{% endblock %}

{% block head_title %}
    {{ 'resetting.email.subject'|trans({'%username%': user.username,'%name%': user.firstName,'%name%': user.firstName}) }}
{% endblock %}

{% block content %}
    {{ 'resetting.email.message'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl,'%name%': user.firstName})|raw|nl2br }}
{% endblock %}
