                    <a href="{{path('admin_customer_order_update_status', {'id' : order.id,'status': payment_status_paid})}}" onclick="return confirm('Are you sure you want to confirm payment?');">
                        <button class="btn btn-default"> Mark as Paid</button>
                    </a>
                {% else %}
                    <button class="btn btn-default" disabled ng-cloak> Mark as Paid</button>
                {% endif %}

                {% if (order.fulfilled == 0 and order.cancelled != 1) and order.paid == 1 and order.shipdate %}
                    <a href="{{path('admin_customer_order_update_status', {'id' : order.id,'status': payment_status_shipped})}}" onclick="return confirm('Are you sure you want to confirm shipped?');">
                    <button class="btn btn-primary"><i class="fa fa-truck" aria-hidden="true"></i> Mark as Shipped</button>
                    </a>
                {% else %}
                    <a href="{{path('admin_customer_order_update_status', {'id' : order.id,'status': payment_status_shipped})}}" onclick="return confirm('Are you sure you want to confirm shipped?');">
